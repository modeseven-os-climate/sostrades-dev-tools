                            "migrations/versions/224990fccd32_default_group_v2.py",
                            "migrations/versions/59ef3f9fbb52_add_no_execution_profile.py",
                            "sos_trades_api/version.info"]],
    "models/witness-core": ["fb7c7e2",[
