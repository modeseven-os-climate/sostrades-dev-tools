ignored_exts = [
    "pkl",
    "png",
    "jpg",
    "csv",
    "md",
    "markdown",
    "avif",
    "json",
    "in",
    "gitignore",
    "cfg",
    "puml",
    "pdf",
    "txt",
    "ipynb",
    "zip",
    "rst",
    "ini",
    "yml",
    "yaml",
    "owl",
    "xls",
    "xlsx",
    "xlsm",
]

def write_headers_if_needed_in_repos(ignored_exts, repo_dict):

    ht = HeaderTools()
    
    for repo_dir, values in repo_dict.items():

        sha = values[0]
        ignored_files = values[1]

        ht.write_headers_if_needed_in_repo(ignored_exts, ignored_files, sha, repo_dir)

write_headers_if_needed_in_repos(ignored_exts, repo_dict)
