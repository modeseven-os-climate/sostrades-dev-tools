from sostrades_core.tools.check_headers import HeaderTools


repo_dict = {
    "platform/sostrades-core": ["11d7f9f", []],
    "platform/sostrades-webapi": ["09b208",[
                            "migrations/versions/6fde15c1f0d5_default_group_v3.py",
